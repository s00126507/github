<Page
    x:Class="UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Information" VerticalAlignment="Top" Height="35" Width="283" FontSize="32"/>
        <Button x:ConnectionId='1' x:Name="button" Content="Next" HorizontalAlignment="Left" Margin="281,582,0,0" VerticalAlignment="Top"                      >
            <Button.Flyout>
                <Flyout>
                    <Grid Height="100" Width="100"/>
                </Flyout>
            </Button.Flyout>
        </Button>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="228" Width="380" FontSize="18.667">
        	<Run Text="Please read Terms and Conditions before using MyBlackBox application. On this page you can see tutorial on how to use this application and what to expect from it."/>
        	<LineBreak/>
        	<Run Text="You will need GPS and Wifi enabled to have information passed between 2 phones."/>
        </TextBlock>
        <Image  x:Name="image" HorizontalAlignment="Left" Height="230" Margin="67,300,0,0" VerticalAlignment="Top" Width="250" />

    </Grid>
</Page>

